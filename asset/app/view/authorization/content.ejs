<% Object.keys(authorizations).forEach(function(id) { -%>
<div class="panel panel-default tab-pane" id="<%= id %>">
  <div class="panel-heading">
    <h3 class="panel-title"><%= authorizations[id].name %></h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-12"><%= authorizations[id].description %></div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <h4>Statements</h4>
        <div class="list-group">
          <% authorizations[id].statements.forEach(function(stmt) { -%>
          <div class="list-group-item">
            <% if (stmt.action instanceof Array) { -%>
              <% stmt.action.forEach(function(a) { -%>
            <span class="label label-success"><%= a.toUpperCase() %></span>
              <% }) -%>
            <% } else { -%>
            <span class="label label-success"><%= stmt.action.toUpperCase() %></span>
            <% } -%>
            <b>/<%= stmt.resource.join('/') %></b>
          </div>
          <% }) -%>
        </div>
      </div>
    </div>
  </div>
</div>
<% }) -%>
