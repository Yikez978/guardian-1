<% include include/head.ejs %>
<% include include/top.ejs %>
    <div class="container">
      <div class="page-header">
        <h1>Authorizations</h1>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-6 scrollable">
          <div class="list-group" role="tabpanel">
            <% Object.keys(authorizations).forEach(function(id) { -%>
            <a href="#<%= id %>" class="list-group-item" data-toggle="tab"><%= authorizations[id].name %></a>
            <% }) -%>
          </div>
        </div>
        <div class="col-md-6">
          <div class="tab-content">
            <% Object.keys(authorizations).forEach(function(id) { -%>
            <div class="panel panel-default tab-pane" id="<%= id %>">
              <div class="panel-heading">
                <h3 class="panel-title"><%= authorizations[id].name %></h3>
              </div>
              <div class="panel-body">
                <div class="row">
                  <div class="col-md-12"><%= authorizations[id].description %></div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <h4>Statements</h4>
                    <div class="list-group">
                      <% authorizations[id].statements.forEach(function(stmt) { -%>
                      <div class="list-group-item">
                        <% if (stmt.action instanceof Array) { -%>
                          <% stmt.action.forEach(function(a) { -%>
                        <span class="label label-success"><%= a %></span>
                          <% }) -%>
                        <% } else { -%>
                        <span class="label label-success"><%= stmt.action %></span>
                        <% }-%>
                        <b>/<%= stmt.resource.join('/') %></b>
                      </div>
                      <% }) -%>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% }) -%>
          </div>
        </div>
      </div>
    </div>
<% include include/bottom.ejs %>
