server {
  listen <%= node['guardian']['front_end']['listen'] %>;

  <% if node['guardian']['front_end']['ssl'] -%>
  ssl on;
  ssl_certificate <%= node['guardian']['front_end']['ssl_cert'] %>;
  ssl_certificate_key <%= node['guardian']['front_end']['ssl_key'] %>;
  <% end -%>

  location / {
    proxy_pass http://<%= node['guardian']['front_end']['uri'] %>;
  }
}
