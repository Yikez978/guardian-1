#!/usr/bin/env node
require('../lib/config');

var Express = require('express');
var HTTP = require('http');

var app = module.exports = Express();
var server = HTTP.createServer(app);

var Body = require('../lib/mw/body');
app.use(Body.aggregate);
app.use(Body.json);

require('../lib/control/session').attach(app);

server.listen(Config.get('session:service:port'),
              Config.get('session:service:hostname'), function() {
                console.log('Session service started');
              });
